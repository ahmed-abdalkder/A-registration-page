
<%- include("header.ejs") %>

     <div class="container my-5">
 <form action="/user" method="post">
   <input name="name" type="text" placeholder="enter your name" class="form-control my-2">
   <input name="email" type="email" placeholder="enter your email" class="form-control my-2">
   <input name="password" type="password" placeholder="enter your password" class="form-control my-2">
   <button class="btn btn-primary">Submit</button>
 </form>
</div>
<div class="container my-5">
  <table class="table text-center">
<thead>
  <th>name</th>
  <th>email</th>
  <th>password</th>
  <th>action</th>
</thead>
<tbody>
 <% for( let i = 0; i < user.length; i++ ) { %>
  <tr>
    <td><%= user[i].name %></td>
    <td><%= user[i].email %></td>
    <td><%= user[i].password %></td>
    <td>
      <a class="btn btn-success" href="/edituser/<%= user[i]._id %>">Edit</a>
      <a class="btn btn-danger" href="/deleteuser/<%= user[i]._id %>">Delete</a>
       </td>
   
  </tr>
 <% } %>
</tbody>
  </table>
</div>
<%- include("footer.ejs") %>